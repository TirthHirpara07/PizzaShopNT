                                    <a href="#" class="text-decoration-none text-dark"><span
                                            class="SidebarText fw-bold fs-5 ">Customers</span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="MainContent col-12 col-md-9 col-xl-10  bg-light ">
                <div class=" row">
                    <!-- navbar -->
                    <div class="col-12  bg-info d-flex justify-content-end">
                        <div class=" d-md-none mt-1 mx-3" id="ToggleSidebar" onclick="SidebarOnClick()">
                            <a data-bs-toggle="offcanvas" href="#offcanvasExample" role="button"
                                aria-controls="offcanvasExample">
                                <img src="~/images/logos/pizzashop_logo.png" class="CompanyLogo" alt="" height="50"
                                    width="50">
                            </a>
                        </div>
                        <div>
                            <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <img src="~/ProfilePhotos/@UserImg" alt="" height="50" width="50" style="border-radius: 50%;">
                            </button>
                            <table class="dropdown-menu dropdown-menu-end p-3">
                                <tr>
                                    <td align="center" colspan="2"><img class="my-2" src="~/ProfilePhotos/@UserImg"
                                            alt="" height="35" width="35" style="border-radius: 50%;">
                                        <span class="my-2 ">
                                            @Username
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="right"><img src="~/images/icons/profile.svg" class="me-3" alt=""
                                            height="20" width="20"></td>
                                    <td> <a class="text-decoration-none text-black" asp-controller="dashboard" asp-action="profile">
                                            My Profile
                                        </a></td>
                                </tr>
                                <tr>
                                    <td><img src="~/images/icons/changePassword.svg" alt="" class="me-3" height="15"
                                            width="15"></td>
                                    <td> <a class="text-decoration-none text-black" asp-controller="dashboard" asp-action="ChangePasword">
                                            Change Password
                                        </a></td>
                                </tr>
                                <tr>
                                    <td><img src="~/images/icons/logout.svg" alt="" class="me-3" height="15"
                                            width="15"></td>
                                    <td> <a data-bs-toggle="modal" data-bs-target="#logoutmodal">
                                           LogOut
                                        </a></td>
                                </tr>
                            </table>

                        </div>


                    </div>
                    <!-- Content -->
                    @* viewdata here *@
                    <div class="col-12">

                        @RenderBody()
                    </div>
                   

                </div>
            </div>
        </div>
