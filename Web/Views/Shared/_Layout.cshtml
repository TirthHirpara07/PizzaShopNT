                                width="70">
                        </div>
                        <div class="py-3">
                            <span class="fs-4 CompanyName fw-bolder text-info">PIZZASHOP</span>
                        </div>
                    </div>
                    <div class="col-12 SidebarList ">
                        <div class="row">
                            <ul class="list-unstyled col-12 p-0">
                                <li class="m-3 d-flex  align-items-center">
                                    <img src="/images/icons/total-orders.svg" alt="" height="30" width="30"
                                        class="me-3">
                                    <a asp-controller="Dashboard"asp-action="index"  class="text-decoration-none text-dark"><span
                                            class="SidebarText fw-bold fs-5 ">Dashboard</span></a>
                                </li>
                                <li class="m-3 d-flex  align-items-center">
                                    <img src="/images/icons/total-orders.svg" alt="" height="30" width="30"
                                        class="me-3">
                                    <a class="text-decoration-none text-dark" asp-controller="User"
                                        asp-action="index"><span class="SidebarText fw-bold fs-5 ">Users</span></a>
                                </li>
                                <li class="m-3 d-flex  align-items-center">
                                    <img src="/images/icons/total-orders.svg" alt="" height="30" width="30"
                                        class="me-3">
                                    <a asp-controller="RolePermission"
                                        asp-action="index" class="text-decoration-none text-dark"><span
                                            class="SidebarText fw-bold fs-5 ">Role and Permission</span></a>
                                </li>
                                <li class="m-3 d-flex  align-items-center">
                                    <img src="/images/icons/total-orders.svg" alt="" height="30" width="30"
                                        class="me-3">
                                    <a asp-controller="Menu"
